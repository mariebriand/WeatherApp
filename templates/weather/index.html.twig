{% extends 'base.html.twig' %}

{% block title %}Hello WeatherController!{% endblock %}

{% block body %}
    <style>
        .example-wrapper {
            margin: 1em auto;
            max-width: 800px;
            width: 95%;
            font: 18px/1.5 sans-serif;
        }

        .example-wrapper code {
            background: #F5F5F5;
            padding: 2px 6px;
        }
    </style>

    <div class="example-wrapper">

        <h1>Weather App</h1>

        <form method="get" action="{{ path('app_weather') }}">
            <div>
                <input type="text" name="city" class="form-control" placeholder="Enter city name" value="{{ city|e }}">
                <button>Check Weather</button>
            </div>
        </form>

        {% if error %}
            <div>{{ error }}</div>
        {% endif %}

        {% if weather %}
            <div>
                <h2>{{ weather.city|e }}</h2>
                <p>
                    <strong>{{ weather.temp|e }} Â°C</strong>, {{ weather.desc|e }}
                    <img src="https://openweathermap.org/img/wn/{{ weather.icon|e }}@2x.png" alt="icon">
                </p>
            </div>
        {% endif %}

    </div>
{% endblock %}
